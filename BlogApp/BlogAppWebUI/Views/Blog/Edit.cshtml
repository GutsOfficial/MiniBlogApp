@model Blog
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h2>Edit</h2>
    <form asp-controller="Blog" asp-action="Edit" method="post">
        <input type="hidden" asp-for="BlogId" />
        <div class="form-group">
            <label asp-for="Title">Blog Başlığı</label>
            <input asp-for="Title" class="form-control" placeholder="Enter Title">
            
        </div>
        <div class="form-group">
            <label asp-for="Description">Blog Açıklaması</label>
            <input asp-for="Description" class="form-control" placeholder="Enter Description">
           
        </div>
        <div class="form-group">
            <label asp-for="Body">Blog Başlığı</label>
            <input asp-for="Body" class="form-control" placeholder="Enter Body">
            
        </div>
        <div class="form-group">
            <label asp-for="Image">Blog Resmi</label>
            <input asp-for="Image" class="form-control" placeholder="Enter Image">
            
        </div>
        <div class="form-group">
            <label asp-for="CategoryId">Blog Kategorisi</label>
            <select class="form-select" asp-for="CategoryId" asp-items="ViewBag.category">
                <option disabled value="">Select category</option>
            </select>
           
        </div>
      
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

