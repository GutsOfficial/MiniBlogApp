@model IEnumerable<Blog>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List</h1>
<div class="container">
    <div class="row">
        <div class="col">
            @if (Model.Count()>0)
            {
                <table class="table table-bordered table-striped">
                    <thead >
                        <tr>
                            <td>Image</td>
                             <td>Title</td>
                              <td>Date</td>
                            <td>Is Approved</td>
                            <td>Is Home</td>
                            <td>Is Slider</td>

                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="~/img/@item.Image" /></td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td>
                                    @if (@item.IsApproved)
                                    {
                                        <i class="fa fa-check" aria-hidden="true"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-times" aria-hidden="true"></i>
                                    }
                                    </td>
                                    <td>
                                @if (@item.IsHome)
                                {
                                    <i class="fa fa-check" aria-hidden="true"></i>
                                }
                                else
                                {
                                    <i class="fa fa-times" aria-hidden="true"></i>
                                }
                                </td>
                                <td>
                                @if (@item.IsSlider)
                                {
                                    <i class="fa fa-check" aria-hidden="true"></i>
                                }
                                else
                                {
                                    <i class="fa fa-times" aria-hidden="true"></i>
                                }
                                </td>
                                <td>
                                    <a class="btn btn-primary" asp-controller="Blog" asp-action="AddOrUpdate" asp-route-id="@item.BlogId">
                                        Details
                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-danger" asp-controller="Blog" asp-action="Delete" asp-route-id="@item.BlogId">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                    <div class="alert alert-danger">
                        Blog Eklenmemiş
                    </div>
            }
        </div>
    </div>
</div>
